<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="test.sunysan.com.mydemo.MainActivity">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/wwww"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="登陆"
            android:textColorHint="#c0c0c0"
            />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/eeee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/wwww">

        <EditText
            android:id="@+id/edit_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="登陆"
            android:textColorHint="#c0c0c0"
            />

    </android.support.design.widget.TextInputLayout>


    <ImageView
        android:id="@+id/imagetest"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/eeee"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_app"/>

    <view
        class="com.sunysan.headportrait.view.FilletImageView"
        android:id="@+id/my_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_app"
        app:round_leftdown="60dp"
        app:round_leftup="60dp"
        app:round_rightdown="60dp"
        android:layout_below="@id/imagetest"
        app:round_rightup="60dp"
        />

</RelativeLayout>
